<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#CC000000</item>
        <item name="colorControlHighlight">#CC000000</item>
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginButtonTheme" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="colorButtonNormal">#EE691A</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

</resources>
